citHeader("To cite SafeBRMS in publications use:")

bibentry(
  bibtype  = "Manual",
  title    = "SafeBRMS: Safe Bayesian Regression Model Selection with E-Values",
  author   = "SafeBRMS Contributors",
  year     = "2024",
  note     = "R package version 0.1.0",
  url      = "https://github.com/GWMcElfresh/SafeBRMS",
  textVersion = paste(
    "SafeBRMS Contributors (2024).",
    "SafeBRMS: Safe Bayesian Regression Model Selection with E-Values.",
    "R package version 0.1.0.",
    "https://github.com/GWMcElfresh/SafeBRMS"
  )
)

citFooter("For the underlying methodology, please also cite:")

bibentry(
  bibtype  = "Article",
  title    = "Safe testing",
  author   = c(person("Peter", "Grünwald"),
               person("Rianne", "de Heide"),
               person("Wouter", "Koolen")),
  year     = "2019",
  journal  = "arXiv preprint",
  url      = "https://arxiv.org/abs/1906.07801",
  textVersion = paste(
    "Grünwald, P., de Heide, R., & Koolen, W. (2019).",
    "Safe testing.",
    "arXiv preprint arXiv:1906.07801."
  )
)
